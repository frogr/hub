<div class="<%= DesignSystemHelper::CONTAINER_WIDE %> py-20">
  <div class="mb-6">
    <%= link_to "← Back to User", admin_user_path(@user), class: DesignSystemHelper::LINK %>
  </div>
  
  <div class="<%= DesignSystemHelper::CARD %>">
    <div class="<%= DesignSystemHelper::CARD_BODY %>">
      <h3 class="<%= DesignSystemHelper::TEXT_HEADING %> <%= DesignSystemHelper::TEXT_PRIMARY %> mb-8">Edit User</h3>
      
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |form| %>
        <div class="space-y-6">
          <div>
            <%= form.label :email, class: DesignSystemHelper::FORM_LABEL %>
            <%= form.email_field :email, class: DesignSystemHelper::FORM_INPUT %>
          </div>
          
          <div class="flex items-center">
            <%= form.check_box :admin, class: "h-5 w-5 rounded border-primary-600/50 bg-primary-800/50 text-accent-500 focus:ring-accent-500/30 focus:ring-offset-0 focus:ring-4" %>
            <%= form.label :admin, "Administrator", class: "ml-3 #{DesignSystemHelper::TEXT_BODY} #{DesignSystemHelper::TEXT_SECONDARY}" %>
          </div>
          
          <div>
            <%= form.submit "Update User", class: DesignSystemHelper::BTN_PRIMARY %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="<%= DesignSystemHelper::CARD %> mt-8">
    <div class="<%= DesignSystemHelper::CARD_BODY %>">
      <h3 class="<%= DesignSystemHelper::TEXT_SUBHEADING %> <%= DesignSystemHelper::TEXT_PRIMARY %> mb-4">Danger Zone</h3>
      <div class="<%= DesignSystemHelper::ALERT_ERROR %>">
        <p class="mb-4">Once you delete this user, there is no going back. This action will:</p>
        <ul class="list-disc list-inside space-y-2 mb-4">
          <li>Delete the user account permanently</li>
          <li>Cancel any active subscriptions</li>
          <li>Remove all associated data</li>
        </ul>
        <%= button_to "Delete User", 
              admin_user_path(@user), 
              method: :delete,
              data: { 
                confirm: "Are you absolutely sure? This action cannot be undone.",
                turbo_confirm: "Are you absolutely sure? This action cannot be undone."
              },
              class: DesignSystemHelper::BTN_DANGER %>
      </div>
    </div>
  </div>
</div>