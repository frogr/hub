<div class="<%= DesignSystemHelper::CONTAINER_NARROW %> py-20">
  <div class="<%= DesignSystemHelper::CARD %>">
    <div class="<%= DesignSystemHelper::CARD_BODY %> text-center">
      <div class="w-24 h-24 mx-auto mb-8 bg-green-800/30 border border-green-600/50 rounded-full flex items-center justify-center">
        <svg class="h-12 w-12 <%= DesignSystemHelper::TEXT_SUCCESS %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      
      <h1 class="<%= DesignSystemHelper::TEXT_HEADING %> <%= DesignSystemHelper::TEXT_PRIMARY %> mb-6">Payment Successful!</h1>
      
      <p class="<%= DesignSystemHelper::TEXT_BODY %> <%= DesignSystemHelper::TEXT_SECONDARY %> mb-10">
        Thank you for subscribing to the <%= @plan&.name %> plan. Your subscription is now active.
      </p>
      
      <div class="p-6 bg-primary-700/20 rounded-xl border border-primary-600/30 mb-10">
        <p class="<%= DesignSystemHelper::TEXT_BODY_SM %> <%= DesignSystemHelper::TEXT_MUTED %>">
          We're processing your subscription. You'll receive a confirmation email shortly.
        </p>
      </div>
      
      <%= link_to "View Your Subscription", subscriptions_path, class: btn_primary %>
    </div>
  </div>
</div>
