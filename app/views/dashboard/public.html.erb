<!-- Hero Section -->
<section class="hero bg-gradient-to-br from-primary-50 via-white to-accent-50">
  <div class="hero-content">
    <div class="inline-flex items-center justify-center mb-6">
      <div class="w-20 h-20 bg-gradient-primary rounded-3xl flex items-center justify-center shadow-xl animate-scale-in">
        <span class="text-white font-bold text-3xl">H</span>
      </div>
    </div>
    <h1 class="hero-title">
      Welcome to <span class="text-transparent bg-clip-text bg-gradient-primary">Hub</span>
    </h1>
    <p class="hero-subtitle max-w-2xl mx-auto">
      Your central command for seamless workflow management. Built for modern teams who value simplicity and power.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to new_user_registration_path, class: "btn-primary btn-lg group" do %>
        <span>Start Free Trial</span>
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      <% end %>
      <%= link_to "Watch Demo", "#", class: "btn-secondary btn-lg" %>
    </div>
    
    <div class="mt-8 text-sm text-neutral-500">
      No credit card required · 14-day free trial · Cancel anytime
    </div>
  </div>
  
  <!-- Decorative gradient blur -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-32 -right-32 w-96 h-96 bg-primary-200 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute -bottom-32 -left-32 w-96 h-96 bg-accent-200 rounded-full filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
  </div>
</section>

