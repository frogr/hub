<!-- Hero Section -->
<section class="<%= DesignSystemHelper::HERO %> bg-gradient-to-br from-primary-900 via-primary-800 to-primary-900">
  <div class="<%= DesignSystemHelper::HERO_CONTENT %>">
    <div class="inline-flex items-center justify-center mb-8">
      <div class="w-24 h-24 bg-gradient-accent rounded-3xl flex items-center justify-center shadow-2xl animate-scale-in">
        <span class="text-white font-bold text-4xl">H</span>
      </div>
    </div>
    <h1 class="<%= DesignSystemHelper::HERO_TITLE %>">
      Welcome to <span class="text-transparent bg-clip-text bg-gradient-accent"><%= app_name %></span>
    </h1>
    <p class="<%= DesignSystemHelper::HERO_SUBTITLE %>">
      <%= app_tagline %>. <%= app_description %>
    </p>
    
    <div class="flex flex-col sm:flex-row gap-6 justify-center">
      <%= link_to new_user_registration_path, class: "#{DesignSystemHelper::BTN_ACCENT} #{DesignSystemHelper::BTN_XL} group" do %>
        <span>Start Free Trial</span>
        <svg class="w-6 h-6 ml-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      <% end %>
      <%= link_to "Watch Demo", "#", class: "#{DesignSystemHelper::BTN_SECONDARY} #{DesignSystemHelper::BTN_XL}" %>
    </div>
    
    <div class="mt-10 <%= DesignSystemHelper::TEXT_BODY_SM %> <%= DesignSystemHelper::TEXT_MUTED %>">
      No credit card required · 14-day free trial · Cancel anytime
    </div>
  </div>
  
  <!-- Decorative gradient blur -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-32 -right-32 w-96 h-96 bg-accent-600 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute -bottom-32 -left-32 w-96 h-96 bg-primary-600 rounded-full filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
  </div>
</section>

