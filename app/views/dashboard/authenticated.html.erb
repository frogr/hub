<!-- Header -->
<section class="bg-gradient-to-br from-primary-50 via-white to-accent-50 pb-8">
  <div class="container-wide pt-8">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
      <div>
        <h1 class="text-4xl font-bold text-primary-900 mb-2">Dashboard</h1>
        <p class="text-lg text-neutral-600">Welcome back, <%= current_user.email.split('@').first %></p>
      </div>
      <div class="flex items-center space-x-3 mt-4 md:mt-0">
        <% if current_user.subscription&.trialing? %>
          <div class="badge-warning">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
            Trial: <%= current_user.subscription.days_remaining_in_trial %> days left
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Account Overview -->
<section class="section pt-0">
  <div class="container-wide">
    <div class="card shadow-lg mb-8">
      <div class="card-header">
        <h2 class="text-2xl font-bold text-primary-900">Account Overview</h2>
      </div>
      <div class="card-body">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div>
            <label class="form-label">Email Address</label>
            <p class="text-neutral-900 font-medium"><%= current_user.email %></p>
          </div>
          <div>
            <label class="form-label">Member Since</label>
            <p class="text-neutral-900 font-medium"><%= current_user.created_at.strftime("%B %d, %Y") %></p>
          </div>
          <div>
            <label class="form-label">Current Plan</label>
            <div class="flex items-center space-x-2">
              <% if current_user.subscription %>
                <span class="text-neutral-900 font-medium"><%= current_user.subscription.plan.name %></span>
                <% if current_user.subscription.trialing? %>
                  <span class="badge-warning">
                    Trial
                  </span>
                <% elsif current_user.subscription.cancel_at_period_end? %>
                  <span class="badge-warning">
                    Canceling <%= current_user.subscription.current_period_end.strftime("%b %d") %>
                  </span>
                <% else %>
                  <span class="badge-success">Active</span>
                <% end %>
              <% else %>
                <span class="text-neutral-500">No subscription</span>
              <% end %>
            </div>
          </div>
          <div>
            <label class="form-label">Quick Actions</label>
            <%= link_to pricing_path, class: "link-subtle flex items-center space-x-1" do %>
              <span>Manage Plan</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Feature Access -->
