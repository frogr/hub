<div class="min-h-screen flex items-center justify-center">
  <div class="<%= DesignSystemHelper::CONTAINER_NARROW %>">
    <div class="text-center mb-8">
      <div class="w-20 h-20 bg-green-800/30 border border-green-600/50 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 <%= DesignSystemHelper::TEXT_SUCCESS %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h1 class="<%= DesignSystemHelper::TEXT_HEADING %> <%= DesignSystemHelper::TEXT_PRIMARY %> mb-4">Check your email</h1>
      <p class="<%= DesignSystemHelper::TEXT_BODY %> <%= DesignSystemHelper::TEXT_SECONDARY %>">We've sent a magic link to your email address. Click the link to sign in to your account.</p>
    </div>
    
    <div class="<%= DesignSystemHelper::CARD %>">
      <div class="<%= DesignSystemHelper::CARD_BODY %> text-center space-y-6">
        <p class="<%= DesignSystemHelper::TEXT_BODY_SM %> <%= DesignSystemHelper::TEXT_SECONDARY %>">
          Didn't receive the email? Check your spam folder or 
          <%= link_to "try again", new_session_path, class: DesignSystemHelper::LINK %>.
        </p>
        
        <div class="<%= DesignSystemHelper::DIVIDER %>"></div>
        
        <div>
          <%= link_to "← Back to sign in", new_session_path, class: DesignSystemHelper::LINK_SUBTLE %>
        </div>
      </div>
    </div>
  </div>
</div>
