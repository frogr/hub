<section class="<%= DesignSystemHelper::SECTION %>">
  <div class="<%= DesignSystemHelper::CONTAINER_NARROW %> text-center">
    <div class="<%= DesignSystemHelper::CARD %>">
      <div class="<%= DesignSystemHelper::CARD_BODY %> py-16">
        <div class="w-20 h-20 bg-yellow-800/30 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 <%= DesignSystemHelper::TEXT_WARNING %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <h1 class="<%= DesignSystemHelper::TEXT_HEADING %> <%= DesignSystemHelper::TEXT_PRIMARY %> mb-4">Subscription Cancelled</h1>
        <p class="<%= DesignSystemHelper::TEXT_BODY %> <%= DesignSystemHelper::TEXT_MUTED %> mb-8">Your subscription has been cancelled successfully. You'll continue to have access until the end of your current billing period.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to "View Subscriptions", subscriptions_path, class: DesignSystemHelper::BTN_PRIMARY %>
          <%= link_to "Go to Dashboard", authenticated_dashboard_path, class: DesignSystemHelper::BTN_GHOST %>
        </div>
      </div>
    </div>
  </div>
</section>
