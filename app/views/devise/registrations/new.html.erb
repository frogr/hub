<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full animate-fade-in">
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gradient-primary rounded-2xl flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-2xl">H</span>
        </div>
      </div>
      <h2 class="<%= DesignSystemHelper::TEXT_HEADING %> <%= DesignSystemHelper::TEXT_PRIMARY %> mb-3">Create your account</h2>
      <p class="<%= DesignSystemHelper::TEXT_BODY %> <%= DesignSystemHelper::TEXT_MUTED %>">Start your journey with Hub today</p>
    </div>
    
    <div class="<%= DesignSystemHelper::CARD %> shadow-xl">
      <div class="<%= DesignSystemHelper::CARD_BODY %>">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div>
            <%= f.label :email, "Email address", class: DesignSystemHelper::FORM_LABEL %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email", 
                placeholder: "you@example.com", 
                class: DesignSystemHelper::FORM_INPUT %>
          </div>

          <div>
            <%= f.label :password, class: DesignSystemHelper::FORM_LABEL do %>
              Password
              <% if @minimum_password_length %>
                <span class="<%= DesignSystemHelper::TEXT_CAPTION %> <%= DesignSystemHelper::TEXT_MUTED %> font-normal">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
            <% end %>
            <%= f.password_field :password, 
                autocomplete: "new-password", 
                placeholder: "Create a strong password", 
                class: DesignSystemHelper::FORM_INPUT %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm password", class: DesignSystemHelper::FORM_LABEL %>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password", 
                placeholder: "Confirm your password", 
                class: DesignSystemHelper::FORM_INPUT %>
          </div>

          <div class="space-y-4">
            <%= f.submit "Create Account", class: "#{DesignSystemHelper::BTN_PRIMARY} #{DesignSystemHelper::BTN_LG} w-full" %>
            
            <div class="text-center <%= DesignSystemHelper::TEXT_CAPTION %> <%= DesignSystemHelper::TEXT_MUTED %>">
              By creating an account, you agree to our
              <%= link_to "Terms", "#", class: DesignSystemHelper::LINK_SUBTLE %> and
              <%= link_to "Privacy Policy", "#", class: DesignSystemHelper::LINK_SUBTLE %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="mt-8 text-center">
      <p class="<%= DesignSystemHelper::TEXT_BODY %> <%= DesignSystemHelper::TEXT_MUTED %>">
        Already have an account? 
        <%= link_to "Sign in", new_session_path, class: "#{DesignSystemHelper::LINK} font-medium" %>
      </p>
    </div>
  </div>
</div>
