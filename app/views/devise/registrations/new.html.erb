<div class="min-h-screen bg-gradient-to-br from-primary-50 via-white to-accent-50 flex items-center justify-center px-4">
  <div class="max-w-md w-full animate-fade-in">
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gradient-primary rounded-2xl flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-2xl">H</span>
        </div>
      </div>
      <h2 class="text-4xl font-bold text-primary-900 mb-3">Create your account</h2>
      <p class="text-lg text-neutral-600">Start your journey with Hub today</p>
    </div>
    
    <div class="card shadow-xl">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div>
            <%= f.label :email, "Email address", class: "form-label" %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email", 
                placeholder: "you@example.com", 
                class: "form-input text-lg" %>
          </div>

          <div>
            <%= f.label :password, class: "form-label" do %>
              Password
              <% if @minimum_password_length %>
                <span class="text-xs text-neutral-500 font-normal">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
            <% end %>
            <%= f.password_field :password, 
                autocomplete: "new-password", 
                placeholder: "Create a strong password", 
                class: "form-input text-lg" %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm password", class: "form-label" %>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password", 
                placeholder: "Confirm your password", 
                class: "form-input text-lg" %>
          </div>

          <div class="space-y-4">
            <%= f.submit "Create Account", class: "btn-primary btn-lg w-full" %>
            
            <div class="text-center text-sm text-neutral-500">
              By creating an account, you agree to our
              <%= link_to "Terms", "#", class: "link-subtle" %> and
              <%= link_to "Privacy Policy", "#", class: "link-subtle" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="mt-8 text-center">
      <p class="text-neutral-600">
        Already have an account? 
        <%= link_to "Sign in", new_session_path, class: "link font-medium" %>
      </p>
    </div>
  </div>
</div>
