<div class="min-h-screen flex items-center justify-center">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="<%= DesignSystemHelper::TEXT_HEADING %> <%= DesignSystemHelper::TEXT_PRIMARY %> mb-2">Edit Account</h2>
      <p class="<%= DesignSystemHelper::TEXT_BODY %> <%= DesignSystemHelper::TEXT_MUTED %>">Update your account information</p>
    </div>
    
    <div class="<%= DesignSystemHelper::CARD %> <%= DesignSystemHelper::CARD_BODY %>">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "Email address", class: DesignSystemHelper::FORM_LABEL %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: DesignSystemHelper::FORM_INPUT %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="<%= DesignSystemHelper::ALERT_WARNING %>">
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          </div>
        <% end %>

        <div>
          <%= f.label :password, class: DesignSystemHelper::FORM_LABEL do %>
            New Password
            <span class="<%= DesignSystemHelper::TEXT_CAPTION %> <%= DesignSystemHelper::TEXT_MUTED %>">(leave blank if you don't want to change it)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter new password", class: DesignSystemHelper::FORM_INPUT %>
          <% if @minimum_password_length %>
            <p class="mt-1 <%= DesignSystemHelper::TEXT_CAPTION %> <%= DesignSystemHelper::TEXT_MUTED %>"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm new password", class: DesignSystemHelper::FORM_LABEL %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: DesignSystemHelper::FORM_INPUT %>
        </div>

        <div>
          <%= f.label :current_password, class: DesignSystemHelper::FORM_LABEL do %>
            Current Password
            <span class="<%= DesignSystemHelper::TEXT_CAPTION %> <%= DesignSystemHelper::TEXT_MUTED %>">(we need your current password to confirm changes)</span>
          <% end %>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Enter current password", class: DesignSystemHelper::FORM_INPUT %>
        </div>

        <div>
          <%= f.submit "Update Account", class: "#{DesignSystemHelper::BTN_PRIMARY} w-full" %>
        </div>
      <% end %>
      
      <div class="mt-8 pt-6 border-t border-primary-700/50">
        <h3 class="<%= DesignSystemHelper::TEXT_SUBHEADING %> <%= DesignSystemHelper::TEXT_PRIMARY %> mb-4">Danger Zone</h3>
        <div class="<%= DesignSystemHelper::ALERT_ERROR %>">
          <p class="mb-3">Once you delete your account, there is no going back. Please be certain.</p>
          <%= button_to "Delete Account", registration_path(resource_name), 
                data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." }, 
                method: :delete, 
                class: DesignSystemHelper::BTN_DANGER %>
        </div>
      </div>
      
      <div class="mt-6 text-center">
        <%= link_to "â† Back", :back, class: DesignSystemHelper::LINK_SUBTLE %>
      </div>
    </div>
  </div>
</div>
